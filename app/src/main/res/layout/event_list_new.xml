<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_event_list_new"
            android:layout_width="match_parent"
            android:layout_height="165dp" />

        <TextView
            android:id="@+id/tv_event_name_list_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Live CS"
            android:padding="8dp"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:background="@color/card2"
            android:textColor="@color/white"
            android:layout_above="@+id/lv_event_list_new"
            android:gravity="center_horizontal"/>

        <ListView
            android:id="@+id/lv_event_list_new"
            android:layout_below="@+id/iv_event_list_new"
            android:layout_above="@+id/tv_dialog_pioneer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_dialog_pioneer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="PIONEER"
            android:elevation="5dp"
            android:layout_alignParentBottom="true"
            android:background="#ffbf12"
            android:textColor="@color/colorPrimary"
            android:gravity="center"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>