<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="in.nitjsr.ojass.Activities.DevelopersAcitivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_dev_bg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:layout_weight="0.35" />

        <ImageView
            android:id="@+id/iv_dev_ojass_bg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.65" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingTop="60dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:gravity="center_horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_dev_img"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_alignParentTop="true"
                android:elevation="5dp"
                android:layout_centerHorizontal="true" />

            <android.support.v7.widget.CardView
                android:id="@+id/cv_dev"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="80dp" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginTop="90dp">

                    <TextView
                        android:id="@+id/tv_dev_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:text="Abhishek"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/tv_dev_email"
                        android:layout_below="@+id/tv_dev_name"
                        android:layout_centerHorizontal="true"
                        tools:text="abhishek@buyhatke.com"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_dev_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_dev_email"
                        android:layout_margin="10dp"
                        android:textColor="@android:color/black"
                        android:gravity="center"
                        tools:text="Computer Science &amp; Engg\nB.Tech (Hons)\n2014-2018" />

                    <LinearLayout
                        android:layout_alignParentBottom="true"
                        android:layout_below="@+id/tv_dev_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <ImageButton
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/ic_icon_linkedin"
                            android:id="@+id/dev_linked_in" />

                        <ImageButton
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/ic_icon_facebook"
                            android:id="@+id/dev_fb" />

                        <ImageButton
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/ic_icon_github"
                            android:id="@+id/dev_github"
                            android:layout_marginRight="10dp"/>

                        <ImageButton
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:scaleType="centerCrop"
                            android:background="@drawable/ic_icon_whatsapp"
                            android:id="@+id/dev_whats_app" />

                    </LinearLayout>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_dev"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/ib_back_dev"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        tools:tint="#000"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/icon_back"
        android:background="@android:color/transparent"/>

</RelativeLayout>