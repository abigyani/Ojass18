<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ll_topbar"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <ImageView
            android:id="@+id/iv_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"/>

        <ImageButton
            android:id="@+id/ib_back_about_us"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_arrow_left_white_36px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/AboutUs"
            android:paddingLeft="5dp"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_toRightOf="@+id/ib_back_about_us"/>

        <ImageButton
            android:id="@+id/ib_app_share"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="10dp"
            android:layout_marginRight="20dp"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_icon_share"
            android:background="@android:color/transparent" />

        <ImageButton
            android:id="@+id/ib_app_rate_us"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginRight="10dp"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:padding="6dp"
            android:layout_toLeftOf="@+id/ib_app_share"
            app:srcCompat="@drawable/ic_icon_rate"
            android:background="@android:color/transparent" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_about_us"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    app:cardBackgroundColor="#fff"
                    app:cardCornerRadius="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingBottom="10dp">

                        <TextView
                            android:id="@+id/title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="20dp"
                            android:gravity="center_horizontal"
                            android:text="OJASS"
                            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                            android:textColor="#000"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:typeface="sans" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/techfest"
                            android:textColor="@color/colorPrimary"
                            android:layout_gravity="center"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:gravity="center_horizontal"
                            android:text="16th-18th March"
                            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                            android:textSize="12sp" />


                        <TextView
                            android:id="@+id/description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginBottom="15dp"
                            android:autoLink="web"
                            android:justificationMode="inter_word"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/about_us"
                            android:textSize="18sp" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <ImageButton
                                android:layout_margin="10dp"
                                android:layout_height="40dp"
                                android:layout_width="40dp"
                                app:srcCompat="@drawable/ic_icon_facebook"
                                android:background="@android:color/transparent"
                                android:id="@+id/fb"
                                android:scaleType="centerCrop"
                                android:layout_gravity="center"
                                />
                            <ImageButton
                                android:layout_margin="10dp"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:scaleType="centerCrop"
                                app:srcCompat="@drawable/ic_icon_instagram"
                                android:background="@android:color/transparent"
                                android:id="@+id/insta"
                                />
                            <ImageButton
                                android:layout_margin="10dp"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:scaleType="centerCrop"
                                app:srcCompat="@drawable/ic_icon_twitter"
                                android:background="@android:color/transparent"
                                android:id="@+id/twitter"
                                />
                            <ImageButton
                                android:layout_margin="10dp"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:scaleType="centerCrop"
                                app:srcCompat="@drawable/ic_icon_www"
                                android:background="@android:color/transparent"
                                android:id="@+id/web"
                                />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_margin="10dp"
                            android:background="#000000"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Helpdesk"
                            android:layout_marginLeft="15dp"
                            android:textStyle="bold"
                            android:textSize="20sp"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tv_helpdesk_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Aman Gupta"
                                android:textSize="18sp"
                                android:padding="5dp"
                                android:layout_centerVertical="true"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="10dp"/>

                            <ImageButton
                                android:id="@+id/ib_helpdesk_phone"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:padding="5dp"
                                android:src="@android:drawable/stat_sys_phone_call"
                                android:background="@android:color/transparent"
                                android:layout_centerVertical="true"
                                android:tint="#34af23"
                                android:layout_marginRight="10dp"
                                android:layout_toLeftOf="@+id/ib_helpdesk_whatsapp" />

                            <ImageButton
                                android:id="@+id/ib_helpdesk_whatsapp"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:padding="5dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                app:srcCompat="@drawable/ic_icon_whatsapp"
                                android:background="@android:color/transparent"
                                android:layout_marginRight="10dp"/>

                        </RelativeLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>
</LinearLayout>
